<p id="notice"><%= notice %></p>

<h1>Listing Specials</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Special length</th>
      <th>Comedian</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @specials.each do |special| %>
      <tr>
        <td><%= image_tag special.image.url(:medium)%></td>
        <td><%= special.title %></td>
        <td><%= special.description %></td>
        <td><%= special.special_length %></td>
        <td><%= special.comedian %></td>
        <td><%= special.rating %></td>
        <td><%= link_to 'Show', special %></td>
        <td><%= link_to 'Edit', edit_special_path(special) %></td>
        <td><%= link_to 'Destroy', special, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

